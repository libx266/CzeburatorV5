<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" MinWidth="800" MinHeight="450"
        x:Class="CzeburatorV5.TextWindow"
        Title="TextWindow">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition/>
			<RowDefinition Height="35"/>
		</Grid.RowDefinitions>
		<TextBox Name="TbPassword" Grid.Column="0" Foreground="White" Background="Black" FontSize="18"/>
		<UniformGrid Columns="2" Grid.Row="1">
			<TextBox Name="TbLeft"/>
			<TextBox Name="TbRight"/>
		</UniformGrid>
		<UniformGrid Columns="4" Grid.Row="2">
			<Button Name="BtEncode" Content="Зашифровать"/>
			<Button Name="BtDecode" Content="Расшифровать"/>
			<Button Name="BtParse" Content="Загрузить файл"/>
			<Button Name="BtAss" Content="Собрать файл"/>
		</UniformGrid>
	</Grid>
</Window>
